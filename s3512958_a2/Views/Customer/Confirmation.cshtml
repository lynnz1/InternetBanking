@model TransactionViewModel
@{
    ViewData["Title"] = "Confirmation";
}


<div>
    <h2 class="h3 mb-3 fw-normal">Please Confirm Your Transaction Details:</h2>


    <table class="table">
        <tr>
            <td>Account Number: </td>
            <td>@Model.AccountNumber</td>
        </tr>
        <tr>
            <td>Account Type: </td>
            <td>@Model.AccountType</td>
        </tr>
        <tr>
            <td>Action Type: </td>
            <td>@Model.ActionType</td>
        </tr>
        <tr>
            <td>Transaction Amount:  </td>
            <td>@Model.Amount</td>
        </tr>
        <tr>
            <td>Comment: </td>
            <td>@Model.Comment</td>
        </tr>
        <tr>
            <td>Service Fee: </td>
            <td>@Model.ServiceFee</td>
        </tr>
    </table>
   
<form asp-action="Confirmation">
    <input asp-for="AccountNumber" class="form-control" type="hidden" value="@Model.AccountNumber" />
    <input asp-for="ActionType" class="form-control" type="hidden" value="@Model.ActionType" />
    <input asp-for="AccountType" class="form-control" type="hidden" value="@Model.AccountType" />
    <input asp-for="Amount" class="form-control" type="hidden" value="@Model.Amount" />
    <input asp-for="Comment" class="form-control" type="hidden" value="@Model.Comment" />
    <input asp-for="ServiceFee" class="form-control" type="hidden" value="@Model.ServiceFee" />
    <p>
        <button class="w-50 btn btn-lg btn-primary" type="submit" value="Confirmation">Confirm</button>
        <a asp-controller="Customer" asp-action="Index"
           class="btn w-50 btn btn-lg btn-primary text-white">Cancel</a>
    </p>
    
</form>
        
    
</div>

