@model Login
@{
    ViewData["Title"] = "Login Page";
    Layout = "_HomeLayout";
}

<div class="text-center">
    <form asp-action="Login">
        
        <h1 class="h3 mb-3 fw-normal">Log in to MCBA Internet Banking </h1>

        <div class="form-group">
            @*<input class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">LoginID</label>*@

            <label asp-for="LoginID" class="control-label"></label>
            <input asp-for="LoginID" class="form-control" />
            <span asp-validation-for="LoginID" class="text-danger"></span>
        </div>
        <div class="form-group">
            @*<input type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>*@

            <label for="Password" class="control-label"></label>
            <input id="Password" name="Password" type="password" class="form-control"
                   data-val="true" data-val-required="The Password field is required." />
        </div>

        
        <button class="w-100 btn btn-lg btn-primary" type="submit" value="Login">Log in</button>
      
    </form>
</div>

