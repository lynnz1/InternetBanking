@model IEnumerable<BillPay>
@{
    ViewData["Title"] = "All BillPay";
}
@if (Model.Count() == 0)
{
    <h1>This account does not have any BillPay record</h1>
}
else
{
    <h3>BillPays</h3>
    <table class="table">
        <thead>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BillPayID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PayeeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleTimeUtc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsBlocked)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillPayID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayeeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleTimeUtc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsBlocked)
                    </td>
                    <td>
                        @if (item.IsBlocked == true)
                        {
                            <form asp-action="Block">
                                <input type="hidden" name="id" value="@item.BillPayID" />
                                <input type="hidden" name="action" value="unblock" />
                                <button class="w-30 btn btn-danger" type="submit" value="UnLock">UnBlock BillPay</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Block">
                                <input type="hidden" name="id" value="@item.BillPayID" />
                                <input type="hidden" name="action" value="block" />
                                <button class="w-30 btn btn-danger" type="submit" value="Lock">Block BillPay</button>
                            </form>
                        }
                    </td>
                </tr>


            }
        </tbody>
    </table>
}
<a class="btn w-30 btn btn-lg btn-primary text-white" asp-controller="Customer" asp-action="Index">Exit</a>